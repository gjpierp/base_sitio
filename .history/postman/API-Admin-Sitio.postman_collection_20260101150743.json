  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Añade automáticamente headers opcionales (x-token y x-db-profile)",
          "const token = pm.variables.get(\u0027x-token\u0027) || pm.environment.get(\u0027x-token\u0027);",
          "if (token) {",
          "  const existing = pm.request.headers.get(\u0027x-token\u0027);",
          "  if (!existing) pm.request.headers.add({ key: \u0027x-token\u0027, value: token });",
          "}",
          "const dbProfile = pm.variables.get(\u0027x-db-profile\u0027) || pm.environment.get(\u0027x-db-profile\u0027) || \u0027admin\u0027;",
          "if (dbProfile) {",
          "  const existingDb = pm.request.headers.get(\u0027x-db-profile\u0027);",
          "  if (!existingDb) pm.request.headers.add({ key: \u0027x-db-profile\u0027, value: dbProfile });",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Mantener consistencia: mostrar estado y cuerpo mínimo",
          "pm.test(\u0027Estado HTTP válido\u0027, function () {",
          "  pm.expect(pm.response.code).to.be.within(200, 404);",
          "});"
        ]
      }
    }
  ],
