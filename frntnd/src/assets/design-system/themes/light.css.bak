:root {
  --color-success: #2e7d32; /* Verde Ã©xito */
  --color-warning: #ff9800; /* Naranja advertencia */
  --color-danger: #b3261e; /* Rojo peligro */
  --color-info: #1976d2; /* Azul informativo */
  --bg-main: #f3f6fa;
  /* Fondo en degradado para capas principales (light) */
  --bg-gradient: linear-gradient(180deg, #ffffff, #eef4fb 60%);
  --bg-card: #fff;
  --bg-sidebar: #e3e8f0;
  --bg-sidebar-active: #cfd8dc;
  --color-primary: #1976d2;
  --color-secondary: #4caf50;
  --color-accent: #90caf9;
  --color-header-bg: #e3e8f0;
  --color-header-text: var(--color-primary);
  --color-text: #111111;
  --color-text-inverse: #fff;
  --border-radius: 8px;
  --shadow: 0 2px 8px rgba(60, 60, 60, 0.04);
  --breadcrumb-bg: #e3e8f0;
  --breadcrumb-text: #1976d2;
  --breadcrumb-active: #fff;
  --breadcrumb-separator: var(--color-primary);
  --bg-images: var(--bg-card);
  --bg-logo: var(--color-accent);
  --bg-active: var(--bg-sidebar-active, var(--color-accent));
  --focus-ring: var(--color-accent);
  --color-btn: var(--color-primary);
  --bg-overlay: rgba(20, 20, 20, 0.9);
  --color-border: rgba(0, 0, 0, 0.08);
}
/* Alias y valores por defecto requeridos por el sistema */
:root {
  --radius-sm: 0.25rem;
  --radius-md: var(--border-radius, 0.375rem);
  --radius-lg: 0.5rem;

  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;

  --color-bg: var(--bg-main, #fff);
  --color-elev-1: var(--bg-card, var(--color-bg));
  --color-elev-2: rgba(255, 255, 255, 0.6);
  --color-text-muted: rgba(0, 0, 0, 0.6);
  --shadow-1: var(--shadow, 0 2px 8px rgba(0, 0, 0, 0.06));
  /* Row hover backgrounds */
  --table-row-hover: #fafafa;
  /* Select background */
  --select-bg: #ffffff;
  --select-disabled-bg: #e3e8f0;
}
