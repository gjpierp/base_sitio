:root {
  --color-success: #4caf50;
  --color-warning: #ffa000;
  --color-danger: #ef5350;
  --color-info: #90caf9;
  --bg-main: #fbeec1;
  /* Fondo en degradado para capas principales (retro) */
  --bg-gradient: linear-gradient(180deg, #fff7e6, #f5e3c4 60%);
  --bg-card: #fff8e1;
  --bg-sidebar: #a67c52;
  --bg-sidebar-active: #d7b899;
  --color-primary: #a67c52;
  --color-secondary: #d7b899;
  --color-accent: #ff9800;
  --color-header-bg: #a67c52;
  --color-header-text: var(--color-primary);
  --color-text: #4e342e;
  --color-text-inverse: #fff8e1;
  --border-radius: 8px;
  --shadow: 0 2px 8px rgba(166, 124, 82, 0.12);
  --breadcrumb-bg: #232946;
  --breadcrumb-text: #ffd700;
  --breadcrumb-active: #fff;
  --breadcrumb-separator: var(--color-primary);
  --bg-images: var(--bg-card);
  --bg-logo: var(--color-accent);
  --bg-active: var(--bg-sidebar-active, var(--color-accent));
  --focus-ring: var(--color-accent);
  --color-btn: var(--color-primary);
  --bg-overlay: rgba(20, 20, 20, 0.9);
  --color-border: rgba(0, 0, 0, 0.08);
  --radius-sm: 0.25rem;
  --radius-md: var(--border-radius, 0.375rem);
  --radius-lg: 0.5rem;

  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;

  --color-bg: var(--bg-main, #f6f1e6);
  --color-elev-1: var(--bg-card, var(--color-bg));
  --color-elev-2: rgba(255, 255, 255, 0.6);
  /* Row hover backgrounds */
  --table-row-hover: #fff6e8;
  /* Select background */
  --select-bg: #fff8e1;
  --select-disabled-bg: #f3ede0;
  --color-text-muted: rgba(0, 0, 0, 0.6);
  --shadow-1: var(--shadow, 0 2px 8px rgba(0, 0, 0, 0.06));
}
