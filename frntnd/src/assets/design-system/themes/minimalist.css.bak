:root {
  --color-success: #4caf50;
  --color-warning: #ffa000;
  --color-danger: #ef5350;
  --color-info: #90caf9;
  --bg-main: #fff;
  /* Fondo en degradado para capas principales (minimalista) */
  --bg-gradient: linear-gradient(180deg, #ffffff, #f7f7f7 60%);
  --bg-card: #fff;
  --bg-sidebar: #222;
  --bg-sidebar-active: #333;
  --color-primary: #222;
  --color-secondary: #aaa;
  --color-accent: #e0e0e0;
  --color-header-bg: #fff;
  --color-header-text: var(--color-primary);
  --color-text: #222;
  --color-text-inverse: #fff;
  --border-radius: 8px;
  --shadow: 0 2px 8px rgba(60, 60, 60, 0.04);
  --breadcrumb-bg: #232946;
  --breadcrumb-text: #ffd700;
  --breadcrumb-active: #fff;
  --breadcrumb-separator: var(--color-primary);
  --bg-images: var(--bg-card);
  --bg-logo: var(--color-accent);
  --bg-active: var(--bg-sidebar-active, var(--color-accent));
  --focus-ring: var(--color-accent);
  --color-btn: var(--color-primary);
  --bg-overlay: rgba(20, 20, 20, 0.9);
  --color-border: rgba(0, 0, 0, 0.08);
  --radius-sm: 0.25rem;
  --radius-md: var(--border-radius, 0.375rem);
  --radius-lg: 0.5rem;

  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;

  --color-bg: var(--bg-main, #fff);
  --color-elev-1: var(--bg-card, var(--color-bg));
  --color-elev-2: rgba(255, 255, 255, 0.6);
  --color-text-muted: rgba(0, 0, 0, 0.6);
  --shadow-1: var(--shadow, 0 2px 8px rgba(0, 0, 0, 0.06));
  /* Select backgrounds */
  --select-bg: var(--color-elev-2);
  --select-disabled-bg: rgba(0, 0, 0, 0.04);
}
