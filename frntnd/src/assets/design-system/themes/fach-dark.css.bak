:root {
  --bg-active: var(--bg-sidebar-active, var(--color-accent));
  --bg-card: #232946;
  --bg-images: var(--bg-card);
  --bg-logo: var(--color-accent);
  --bg-main: #1a2236;
  /* Fondo en degradado para capas principales (FACH dark) */
  --bg-gradient: linear-gradient(180deg, #0f151d, #0c1117 60%);
  --bg-overlay: rgba(20, 20, 20, 0.9);
  --bg-sidebar: #003a8f; /* Azul FACH institucional */
  --bg-sidebar-active: #00296b;
  --border-radius: 10px;
  --breadcrumb-active: #fff;
  --breadcrumb-bg: #232946;
  --breadcrumb-separator: var(--color-primary);
  --breadcrumb-text: #ffd700;
  --color-accent: #ffd700; /* Dorado institucional */
  --color-bg: var(--bg-main, #111);
  --color-border: rgba(0, 0, 0, 0.08);
  --color-btn: var(--color-primary);
  --color-danger: #ef5350;
  --color-elev-1: var(--bg-card, var(--color-bg));
  --color-elev-2: rgba(0, 0, 0, 0.6);
  --color-header-bg: #003a8f;
  --color-header-text: var(--color-accent);
  --color-info: #90caf9;
  --color-primary: #003a8f; /* Azul FACH institucional */
  --color-secondary: #e5e5e5; /* Gris claro institucional */
  --color-success: #4caf50; /* Verde Ã©xito */
  --color-text: #ffffff;
  --color-text-inverse: #fff;
  --color-text-muted: rgba(255, 255, 255, 0.6);
  --focus-ring: var(--color-accent);
  --radius-lg: 0.5rem;
  --radius-md: var(--border-radius, 0.375rem);
  --radius-sm: 0.25rem;
  --shadow: 0 2px 12px rgba(60, 60, 60, 0.12);
  --shadow-1: var(--shadow, 0 2px 8px rgba(0, 0, 0, 0.12));
  --sidebar-text: var(--color-header-text, #ffd700);
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;
  /* Select backgrounds */
  --select-bg: #121212;
  --select-disabled-bg: rgba(255, 255, 255, 0.03);
}
