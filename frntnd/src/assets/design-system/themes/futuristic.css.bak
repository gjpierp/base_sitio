:root {
  --bg-active: var(--bg-sidebar-active, var(--color-accent));
  --bg-card: #203a43;
  --bg-images: var(--bg-card);
  --bg-logo: var(--color-accent);
  --bg-main: #0f2027;
  /* Fondo en degradado para capas principales (futuristic) */
  --bg-gradient: linear-gradient(180deg, #081014, #0d1b22 60%);
  --bg-overlay: rgba(20, 20, 20, 0.9);
  --bg-sidebar: #2c5364;
  --bg-sidebar-active: #00c6ff;
  --border-radius: 12px;
  --breadcrumb-active: #fff;
  --breadcrumb-bg: #232946;
  --breadcrumb-separator: var(--color-primary);
  --breadcrumb-text: #ffd700;
  --color-accent: #ffe600;
  --color-bg: var(--bg-main, #000);
  --color-border: rgba(0, 0, 0, 0.08);
  --color-btn: var(--color-primary);
  --color-danger: #ef5350;
  --color-elev-1: var(--bg-card, var(--color-bg));
  --color-elev-2: rgba(255, 255, 255, 0.06);
  --color-header-bg: #203a43;
  --color-header-text: var(--color-primary);
  --color-info: #90caf9;
  --color-primary: #00c6ff;
  --color-secondary: #0072ff;
  --color-success: #4caf50;
  --color-text: #fff;
  --color-text-inverse: #0f2027;
  --color-text-muted: rgba(255, 255, 255, 0.6);
  --focus-ring: var(--color-accent);
  --radius-lg: 0.5rem;
  --radius-md: var(--border-radius, 0.375rem);
  --radius-sm: 0.25rem;
  --shadow: 0 2px 16px rgba(0, 198, 255, 0.15);
  --shadow-1: var(--shadow, 0 2px 8px rgba(0, 0, 0, 0.12));
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;
  /* Select backgrounds */
  --select-bg: #121212;
  --select-disabled-bg: rgba(255, 255, 255, 0.03);
}
